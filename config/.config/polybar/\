[module/i3]
  type = internal/i3
  format = <label-state> <label-mode>
  index-sort = true
  wrapping-scroll = false
  label-mode-padding = 2
  label-mode-foreground = #000
  label-mode-background = ${colors.primary}
  label-focused = %index% %icon%
  label-focused-background = ${colors.background-alt}
  label-focused-underline = ${colors.primary}
  label-focused-padding = 2
  label-unfocused = %index% %icon%
  label-unfocused-padding = 2
  label-visible = V %index%
  label-visible-background = ${self.label-focused-background}
  label-visible-underline = ${self.label-focused-background}
  label-visible-padding = ${self.label-focused-padding}
  label-urgent = %index%!
  label-urgent-background = ${colors.alert}
  label-urgent-padding = 2
  ws-icon-0 = 1;
  ws-icon-1 = 2;
  ws-icon-2 = 3;
  ws-icon-3 = 4;
  ws-icon-4 = 5;

[module/spotify]
  type = custom/script
  hook-0 = echo  `playerctl metadata xesam:artist` - `playerctl metadata xesam:title`
  exec = echo  `playerctl metadata xesam:artist` - `playerctl metadata xesam:title`
  exec-if = pgrep -x "spotify"
  initial = 1
  interval = 1
  format-underline = #55ba55

[module/eth]
  type = internal/network
  interface = enp9s0
  interval = 3.0
  format-connected-underline = #55aa55
  ; format-connected-prefix = " "
  format-connected-prefix-foreground = ${colors.foreground-alt}
  label-connected = %local_ip%
  format-disconnected = <label-disconnected>
  format-disconnected-underline = ${self.format-connected-underline}
  label-disconnected = %ifname% disconnected
  label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
  type = internal/date
	; date =  %%{F#999}%a %e %b %H:%M%%{F-}
  interval = 30

  format =  <label>
  format-padding = 2
  format-foreground = ${colors.foreground}
  format-background = ${colors.background-alt}

  label = %date%
  label-padding = 1
  label-foreground = ${colors.primary}

  date = %I:%M
  date-alt = %d %b %Y

[module/volume]
	type = internal/volume
	format-volume = <ramp-volume> <label-volume>
	label-muted =  mute
	label-muted-foreground = ${colors.secondary}
	label-muted-font = 4
	ramp-volume-0 = 
	ramp-volume-1 = 
	ramp-volume-2 = 
	ramp-volume-3 = 

[module/powermenu]
type = custom/menu

format-foreground = ${colors.foreground}
format-background = ${colors.background}

label-open = ""
label-open-font = 4
label-close = " cancel"
label-close-foreground = ${colors.alert}
label-separator = " | "
label-separator-foreground = ${colors.secondary}

; shutdown
menu-0-0 = " shutdown"
menu-0-0-exec = systemctl poweroff
menu-0-0-foreground = ${colors.foreground}
; reboot
menu-0-1 = " reboot"
menu-0-1-exec = systemctl reboot
menu-0-1-foreground = ${colors.foreground}
; logout
menu-0-2 = " logout"
menu-0-2-exec = systemctl logout
menu-0-2-foreground = ${colors.foreground}


