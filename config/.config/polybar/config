[module/cpu]
  type = internal/cpu

  interval = 1
  format = <label> 
  label =  %percentage%%

[module/memory]
  type = internal/memory

  interval = 3
  format = <label> 
  label =  %gb_used%/%gb_total%

[module/filesystem]
  type = internal/fs

  mount-0 = /

  interval = 10
  format-mounted = <label-mounted>
  label-mounted =  %free% free

[module/spotify]
  type = custom/script
  hook-0 = echo  `playerctl metadata xesam:artist` - `playerctl metadata xesam:title`
  exec = echo  `playerctl metadata xesam:artist` - `playerctl metadata xesam:title`
  exec-if = pgrep -x "spotify"
  initial = 1
  interval = 1
  format-underline = #55ba55

[module/eth]
  type = internal/network
  interface = enp9s0
  interval = 3.0
  format-connected = <label-connected>
  label-connected = %linkspeed%
  format-connected-prefix = " "
  format-connected-prefix-foreground = #55aa55

  format-disconnected = <label-disconnected>
  label-disconnected = discon
  label-disconnected-foreground = ${colors.secondary}
  format-disconnected-prefix = " "
  format-disconnected-prefix-foreground = #aa5555

[module/date]
  type = internal/date
  ; set to 1 if you change date to %p
  interval = 30

  format =  <label>
  format-padding = 2
  format-foreground = ${colors.foreground}
  format-background = ${colors.background}

  label = %date%
  label-padding = 1
  label-foreground = ${colors.foreground}

  date = %I:%M %p
  date-alt = %d %b %Y

[module/volume]
	type = internal/volume
	format-volume = <ramp-volume> <label-volume>
	label-muted =  mute
	label-muted-foreground = ${colors.alert}
	label-muted-font = 4
	ramp-volume-0 = 
	ramp-volume-1 = 
	ramp-volume-2 = 
	ramp-volume-3 = 

[module/powermenu]
type = custom/menu

format-foreground = ${colors.foreground}
format-background = ${colors.background}

label-open = ""
label-open-font = 4
label-close = " cancel"
label-close-foreground = ${colors.alert}
label-separator = " | "
label-separator-foreground = ${colors.secondary}

; shutdown
menu-0-0 = " shutdown"
menu-0-0-exec = systemctl poweroff
menu-0-0-foreground = ${colors.foreground}
; reboot
menu-0-1 = " reboot"
menu-0-1-exec = systemctl reboot
menu-0-1-foreground = ${colors.foreground}
; logout
menu-0-2 = " logout"
menu-0-2-exec = i3-msg exit
menu-0-2-foreground = ${colors.foreground}


