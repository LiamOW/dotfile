# gaps
gaps inner 10
gaps outer 10
smart_gaps on 

# no border when touching screen edge
hide_edge_borders smart

# window border
for_window [class="^.*"] border pixel 6 
# for_window [class=".*"] title_format "<span font='Hack 10'> > %title</span>"

